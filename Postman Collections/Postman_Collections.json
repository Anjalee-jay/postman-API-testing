			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Get token from environment",
							"const authToken = pm.environment.get(\"authToken\");",
							"",
							"if (!authToken) {",
							"    throw new Error(\"Auth token is missing. Make sure it was set in the login request.\");",
							"}",
							"",
							"// Set Authorization header dynamically",
							"pm.request.headers.upsert({",
							"    key: \"Authorization\",",
							"    value: authToken",
							"});"
						],
